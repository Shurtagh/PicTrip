<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:baselineAligned="false">

	<LinearLayout android:orientation="horizontal"  
	    android:layout_weight="1" 
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" >
	    
	    <Button android:id="@+id/btnEditer" 
	        android:text="@string/grid_button_1" 
	        android:scaleType="fitCenter"
	        android:drawableTop="@drawable/editer" 
	        style="@style/MenuButton"
	        android:background="@color/LightGoldenrodYellow"/>
	    <Button android:id="@+id/btnJournal" 
	        android:text="@string/grid_button_2" 
	        android:drawableTop="@drawable/journal" 
	        style="@style/MenuButton"
	        android:background="@color/LightSalmon"/>
	</LinearLayout>
	
	<LinearLayout android:orientation="horizontal" 
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"  
	    android:layout_weight="1" >
	    
	    <Button android:id="@+id/btnTrace" 
	        android:text="@string/grid_button_3"
	        android:drawableTop="@drawable/voyage"
	        style="@style/MenuButton"
	        android:background="@color/SkyBlue"/>
	    <Button android:id="@+id/btnExplore" 
	        android:text="@string/grid_button_4" 
	        android:drawableTop="@drawable/exploration"
	        style="@style/MenuButton"
	        android:background="@color/LightGreen"/>    
	</LinearLayout>


</LinearLayout>