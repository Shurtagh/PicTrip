<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"> 

        <TextView  
		    android:id="@+id/TextViewFormDesc"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"  
		    android:text="@string/form_desc"  
		    android:textSize="10pt">  
		</TextView>
		
        <EditText  
		    android:id="@+id/EditTextTripTitle"
		    android:layout_height="wrap_content"
		    android:hint="@string/form_trip_title"
		    android:inputType="textPersonName"
		    android:layout_width="fill_parent">  
		</EditText>
		
        <TextView  
		    android:id="@+id/TripDateDebutValue"
		    android:layout_height="wrap_content"
		    android:text="Date de dÃ©but"
		    android:padding="5pt"
		    android:textSize="10pt"
		    android:layout_marginTop="3pt"
		    android:textColor="#444444"
		    android:background="@color/LightGrey"
		    android:layout_width="fill_parent">  
		</TextView>

        <TextView
            android:id="@+id/TripDateFinValue"
            android:layout_width="fill_parent"
            android:padding="5pt"
            android:textSize="10pt"
            android:textColor="#444444"
            android:layout_marginTop="3pt"
            android:background="@color/LightGrey"
            android:layout_height="wrap_content"
            android:text="Date de fin" />

        <EditText
            android:id="@+id/EditTextTripDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/form_trip_desc"
            android:inputType="textMultiLine"
            android:lines="5" >

            <requestFocus />
        </EditText>
		
        <Button  
		    android:id="@+id/ButtonSendForm"  
		    android:layout_height="wrap_content"  
		    android:text="@string/form_button"  
		    android:onClick="createTrip"  
		    android:layout_width="fill_parent">  
		</Button>
        
    </LinearLayout>